<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:minWidth="100dp"
  android:padding="10dp"
  android:background="@drawable/dialog_head"
  tools:context="com.joker.common.utils.dialog.AlertDialogFragment">

  <TextView
    android:id="@+id/tv_dialog_title"
    android:layout_height="wrap_content"
    android:layout_width="0dp"
    android:maxLines="1"
    android:gravity="center"
    android:layout_marginTop="10dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:text="@string/title"
    android:textSize="16sp"
    android:padding="10dp"
    />
  <TextView
    android:id="@+id/tv_dialog_content"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/tv_dialog_title"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:text="@string/content"
    android:textSize="14sp"
    tools:text="Content"
    android:gravity="left"
    android:layout_marginTop="10dp"
    android:padding="10dp"
    />

  <Button
    android:id="@+id/btn_dialog_neg"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv_dialog_content"
    app:layout_constraintBottom_toBottomOf="parent"
    android:text="@string/cancel"
    android:visibility="gone"
    android:textSize="12sp"
    android:background="@android:color/white"
    />

  <Button
    android:id="@+id/btn_dialog_pos"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    app:layout_goneMarginLeft="10dp"
    app:layout_constraintLeft_toRightOf="@+id/btn_dialog_neg"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv_dialog_content"
    app:layout_constraintBottom_toBottomOf="parent"
    android:text="@string/confirm"
    android:background="@android:color/white"
    android:textSize="12sp"
    />

</android.support.constraint.ConstraintLayout>
