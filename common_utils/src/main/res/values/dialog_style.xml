<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="BaseDialog" parent="Theme.AppCompat.Light.Dialog">
    <item name="android:windowIsFloating">true</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:windowContentOverlay">@null</item>
    <!--设置无标题-->
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowAnimationStyle">@null</item>
  </style>

  <style name="BaseDialog.DisableDim">
    <!--禁用背景模糊效果-->
    <item name="android:backgroundDimEnabled">false</item>
  </style>

  <style name="EditableDialog">
    <item name="android:fitsSystemWindows">true</item>
    <item name="android:windowSoftInputMode">adjustPan</item>
  </style>

  <style name="BaseTitle">
    <item name="android:textSize">@dimen/big_text_size</item>
    <item name="android:textColor">@color/dialog.Title</item>
  </style>

  <style name="BaseText">
    <item name="android:textSize">@dimen/normal_text_size</item>
    <item name="android:textColor">@color/dialog.Title</item>
  </style>

  <color name="dialog.Title">#ff0000</color>
  <color name="dialog.Content">#6635ff</color>

  <style name="TitleAppearance">
    <item name="android:textColor">@color/main_color</item>
  </style>
  <style name="TitleAppearance.Title">
    <item name="android:textSize">@dimen/big_text_size</item>
  </style>
  <style name="TitleAppearance.Message">
    <item name="android:textSize">@dimen/normal_text_size</item>
  </style>
  
  <style name="TipsButton">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/normal_margin</item>
    <item name="android:paddingLeft">@dimen/normal_margin</item>
    <item name="android:paddingRight">@dimen/normal_margin</item>
    <item name="android:background">@color/white</item>
    <item name="android:textColor">@color/main_color</item>
    <item name="android:textSize">@dimen/normal_text_size</item>
    <item name="android:layout_marginLeft">@dimen/large_margin</item>
    <item name="android:layout_marginRight">@dimen/large_margin</item>
    <item name="android:layout_weight">1</item>
    <item name="android:clickable">true</item>
  </style>

</resources>